# Show Current Git Branch and Status in Prompt
export GIT_PS1_SHOWDIRTYSTATE=1
export PS1='\[\033[01;32m\]\u@\h\[\033[01;34m\] \w\[\033[01;33m\]$(__git_ps1)\[\033[01;34m\] \$\[\033[00m\] '
export VISUAL=vim
export EDITOR=vim


# Update my dotfiles
alias dotfiles-update="git -C ~/code/dotfiles/ pull && source ~/.bashrc && cp ~/code/dotfiles/.gitconfig ~/ && mkdir -p ~/.ssh/ && cp ~/code/dotfiles/.ssh/config ~/.ssh/config"


# Ubuntu and Apt
